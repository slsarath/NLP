=IF(AND([@AML Classification]="Standard Risk", [@Transaction Value]>=300000, [@Status]="WM Completed"), "Valid",
IF(AND(OR([@AML Classification]="PEP", [@AML Classification]="High Risk"), [@Transaction Value]>75000, [@Status]="WM Completed"), "Valid",
IF(AND(OR([@AML Classification]="PEP", [@AML Classification]="High Risk"), [@Transaction Value]>500000, OR([@Status]="WM Completed", [@Status]="TM Completed")), "Valid", "Invalid")))