import pandas as pd
import ast
import numpy as np

# Sample DataFrame with potential NaN values
data = {
    'List1': ["['a', 'b']", "['a', 'c']", np.nan],
    'List2': ["['c']", "['b', 'd']", "['e']"]
}

df = pd.DataFrame(data)

# Function to convert string to list, combine, deduplicate, and sort
def combine_sort_unique(row):
    # Check if the row contains NaN and handle it by using an empty list
    list1 = ast.literal_eval(row['List1']) if pd.notna(row['List1']) else []
    list2 = ast.literal_eval(row['List2']) if pd.notna(row['List2']) else []
    
    # Combine the lists
    combined_list = list1 + list2
    
    # Remove duplicates and sort
    unique_sorted_list = sorted(set(combined_list))
    
    return unique_sorted_list

# Apply the function to the DataFrame to create a new column
df['Combined_Sorted_List'] = df.apply(combine_sort_unique, axis=1)

# Display the DataFrame
print(df)