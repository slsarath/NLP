import re

# Function to clean the text by adding spaces around specific words
def add_spaces_around_keywords(text):
    # Define the keywords to be processed
    keywords = ["source", "purpose", "where", "sof", "sow"]
    
    # Loop through each keyword and ensure spaces before and after it
    for keyword in keywords:
        # 1. Add a space before the keyword if it's directly preceded by a number or special character
        text = re.sub(r"(\S)("+keyword+r")", r"\1 \2", text, flags=re.IGNORECASE)  # Match non-space before the keyword
        
        # 2. Add a space after the keyword if it's directly followed by a number or special character
        text = re.sub(r"("+keyword+r")(\S)", r"\1 \2", text, flags=re.IGNORECASE)  # Match non-space after the keyword

    return text.strip()

# Example usage with the comment
comment_text = "i ahve something $10mwhere the funds have come from - they have come from client?s by way of bonus."

# Apply the function to clean the comment
cleaned_comment = add_spaces_around_keywords(comment_text)

# Display the result
print("Original Comment:", comment_text)
print("Cleaned Comment:", cleaned_comment)