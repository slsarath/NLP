import re
import pandas as pd

# Sample DataFrame
data = {'text': ["This is a test ctrl-12345", "random text Ctrl-ABC", "No match here", "ctrl-xyz123 found"]}
df = pd.DataFrame(data)

# Function to extract 'ctrl-' pattern
def extract_ctrl_pattern(text):
    text = text.lower()  # Convert to lowercase
    pattern = r'ctrl-\w+'  # Regex to match 'ctrl-' followed by alphanumeric characters
    match = re.findall(pattern, text)
    return ', '.join(match) if match else None  # Return matched patterns or None

# Apply function to the text column
df['Extracted_Ctrl'] = df['text'].apply(extract_ctrl_pattern)

# Display the DataFrame
import ace_tools as tools
tools.display_dataframe_to_user(name="Extracted Ctrl Patterns", dataframe=df)